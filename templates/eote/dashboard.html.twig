{% extends '@EasyAdmin/layout.html.twig' %}

{% set dice = player.dices|split('-') %}
{% set res = player.result|split(',') %}

{% block main %}
<div>Bienvenue {{ player.name|capitalize }} pour la partie</div>
<br/>

<div>Dernier jet:
  {% for key, die in dice %}
	{% if die == "b" %}
	   <img src="/img/dice/blue.png" title="blue" />
	{% elseif die == "d" %}
	   <img src="/img/dice/dark.png" title="dark" />
	{% elseif die == "g" %}
	   <img src="/img/dice/green.png" title="green" />
	{% elseif die == "y" %}
	   <img src="/img/dice/yellow.png" title="yellow" />
	{% elseif die == "p" %}
	   <img src="/img/dice/purple.png" title="purple" />
	{% elseif die == "r" %}
	   <img src="/img/dice/red.png" title="red" />
	{% elseif die == "f" %}
	   <img src="/img/dice/force.png" title="force" />
	{% endif %}
  {% endfor %}
</div>
<br/>

<div>RÃ©sultat obtenu:
  {% for key, r in res %}
    <img src="/img/faces/{{ r }}.png" title="{{ r }}" />
  {% endfor %}
</div>
</br>

<div>
  {% if player.picture %}
    <img src="{{ player.picture }}" style="max-width:250px;" />
  {% endif %}
</div>

{% endblock %}

{% block body_javascript %}
{% endblock %}
